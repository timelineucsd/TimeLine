<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.software.timeline.signup.TLSignUpActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextSignUpName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextSignUpPID"
        android:layout_below="@+id/editTextSignUpName"
        android:layout_alignLeft="@+id/editTextSignUpName"
        android:layout_alignStart="@+id/editTextSignUpName"
        android:layout_marginTop="44dp"
        android:digits="ABCD1234567890"
        android:maxLength="10"
        android:hint="PID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextSignUpEmail"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editTextSignUpPID"
        android:layout_alignStart="@+id/editTextSignUpPID"
        android:hint="Email" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerJobPercent"
        android:layout_below="@+id/editTextSignUpEmail"
        android:layout_alignLeft="@+id/editTextSignUpEmail"
        android:layout_alignStart="@+id/editTextSignUpEmail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/buttonSignUpUser"
        android:layout_below="@+id/editTextSignUpEmail"
        android:layout_alignLeft="@+id/editTextSignUpEmail"
        android:layout_alignStart="@+id/editTextSignUpEmail"
        android:layout_marginTop="75dp"
        android:onClick="buttonUserSignUpClicked" />

</RelativeLayout>
